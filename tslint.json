{
  "extends": ["tslint-react", "tslint-immutable", "tslint-config-prettier"],
  "rules": {
    "adjacent-overload-signatures": true,
    "array-type": [true, "array"],
    "arrow-return-shorthand": true,
    "await-promise": true,
    "ban": false,
    "ban-comma-operator": true,
    "ban-types": [
      true,
      ["Boolean", "Use `boolean` instead."],
      ["Number", "Use `number` instead."],
      ["Object", "Use `{}` instead."],
      ["String", "Use `string` instead."]
    ],
    "binary-expression-operand-order": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "deprecation": true,
    "forin": true,
    "import-blacklist": [true, "lodash-es"],
    "interface-name": [true, "never-prefix"],
    "jsdoc-format": true,
    "jsx-boolean-value": [true, "never"],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-use-translation-function": [
      true,
      "allow-punctuation",
      "allow-htmlentities"
    ],
    "label-position": true,
    "object-literal-shorthand": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": true,
    "no-arg": true,
    "no-array-mutation": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-class": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": true,
    "no-delete": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-expression-statement": [true, { "ignore-prefix": "console." }],
    "no-for-in-array": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-implicit-dependencies": [true, "dev"],
    "no-import-side-effect": [true, { "ignore-module": "\\.scss$" }],
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-let": true,
    "no-loop-statement": true,
    "no-non-null-assertion": true,
    "no-object-mutation": true,
    "no-namespace": [true, "allow-declarations"],
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-this": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": true,
    "no-unnecessary-type-assertion": true,
    "no-unsafe-any": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-template": true,
    "radix": true,
    "restrict-plus-operands": true,
    "strict-type-predicates": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "call-signature", "parameter", "property-declaration"],
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": {
      "options": [
        "check-format",
        "ban-keywords",
        "allow-pascal-case",
        "require-const-for-all-caps"
      ]
    }
  },
  "linterOptions": {
    "exclude": ["./src/types/graphql.ts"]
  }
}
